YANDEX_EMAIL=your-email@yandex.com
YANDEX_APP_PASSWORD=your-app-password

# --- Security / policy knobs (recommended) ---
#
# Limit how much email content is returned by read_email (helps reduce prompt-injection surface)
MAX_READ_BODY_CHARS=20000
#
# Log suspicious prompt-injection signals found in emails (logs only signals/metadata, not bodies)
ENABLE_INJECTION_LOGGING=1
INJECTION_SIGNALS_MAX=10
#
# Reduce log noise: log only if instructional patterns are present (recommended)
LOG_INJECTION_ONLY_IF_INSTRUCTION=1
#
# Optional hard block: prevent send_email for N seconds after reading an email with instructional patterns
INJECTION_BLOCK_SEND_ON_INSTRUCTION=0
INJECTION_BLOCK_WINDOW_SECONDS=600
#
# Sending safeguards
MAX_SEND_BODY_CHARS=10000
SEND_RATE_LIMIT_PER_MINUTE=5
#
# Recipient allowlist (recommended). If both are empty -> allow all recipients.
# Comma-separated lists:
ALLOWED_RECIPIENTS=
ALLOWED_RECIPIENT_DOMAINS=
#
# High-risk tools (default OFF). Keep disabled unless you really need them.
ENABLE_FILE_DOWNLOAD=1
ENABLE_MUTATIONS=0

# Attachment download safety
DOWNLOAD_BASE_DIR=
ALLOW_CUSTOM_SAVE_DIR=0
MAX_ATTACHMENT_BYTES=26214400
